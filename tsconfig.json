{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "src/*": [
                "./src/*"
            ]
        },
        "lib": [
            "ES2021",
            "DOM"
        ],
        "outDir": "./dist/node",
        "sourceMap": true,
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": false,
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": [
        "src/",
        "src/index.ts",
        "**/*.tgz",
        "**/*.patch",
        "spec/"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "dist",
        "mocks/",
    ]
}